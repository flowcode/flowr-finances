{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'Document'}, 'Document') }} - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerFinancesBundle::appnav.html.twig", { 'app_document': true }) }}
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            <a href="{{ path('finance_document_si') }}">
                {{ 'supplier_invoices'|trans({}, 'Finance')|title }}
            </a>
            /
            {{ 'Document' | trans({}, 'Document') }}
        </h1>

    </section>
    <section class="content">
        <div class="box">
            <div class="box-body">

                <form action="{{ path('finance_document_si_payments_create',{'id':document.id}) }}" method="post"
                      class="form-horizontal" role="form">

                    <div class="form-group">
                        <label class="form-label col-sm-2">
                            Customer Invoice
                        </label>
                        <div class="col-sm-8">
                            <input class="form-control" disabled name="date" value="{{ document }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label col-sm-2">
                            Date
                        </label>
                        <div class="col-sm-8">
                            <input class="form-control" name="date">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label col-sm-2">
                            Amount
                        </label>
                        <div class="col-sm-8">
                            <input class="form-control" name="amount">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label col-sm-2">
                            Expense
                        </label>
                        <div class="col-sm-8">
                            <select name="expense_account_id" class="form-control">
                                {% for account in expenseAccounts %}
                                    <option value="{{ account.id }}">
                                        {{ account }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label col-sm-2">
                            Payment method
                        </label>
                        <div class="col-sm-8">
                            <select name="asset_account_id" class="form-control">
                                {% for account in assetAccounts %}
                                    <option value="{{ account.id }}">
                                        {{ account }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-2">
                            <button class="btn btn-success" type="submit">
                                {{ 'save'|trans | capitalize }}
                            </button>
                        </div>
                    </div>

                </form>
            </div>
            <div class="box-footer">
                <div class="btn-group record_actions"></div>
            </div>
        </div>
    </section>
{% endblock %}