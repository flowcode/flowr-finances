{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}Payment - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerFinancesBundle::appnav.html.twig", { 'app_payment': true }) }}
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            <a href="{{ path('finance_payment') }}"> {{ 'Payment list'|trans({'Payment': 'Payment'}, 'Payment') }}</a>
            /
            {{ 'Payment' | trans({}, 'Payment') }}
        </h1>
    </section>
    <section class="content">
        <div class="box" id='showPayment'>
            <div class="box-header">
                <div class="box-tools  pull-right">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form) }}

                    <div class="btn-group record_actions">
                        <button class="btn btn-link btn-sm" type="submit"> {{ 'Delete'|trans({}, 'Payment') }}</button>
                        <input name="modal" type="hidden" value="0">

                        <a class="btn btn-link  btn-sm" onclick="showEdit(true)">
                            {{ 'Edit'|trans({}, 'Payment') }}
                        </a>
                    </div>
                    <input name="modal" type="hidden" value="0">
                    {{ form_end(delete_form) }}

                </div>
            </div>
            <div class="box-body">
                <table class="table table-hover record_properties">
                    <tbody>
                    <tr>
                        <th scope="row">{{ 'Type'|trans({}, 'Payment') }}</th>
                        <td>{{ payment.type }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ 'Name'|trans({}, 'Payment') }}</th>
                        <td>{{ payment.name }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ 'Description'|trans({}, 'Payment') }}</th>
                        <td>{{ payment.description }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ 'Created'|trans({}, 'Payment') }}</th>
                        <td>{{ payment.created|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ 'Updated'|trans({}, 'Payment') }}</th>
                        <td>{{ payment.updated|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="box-footer">

            </div>
        </div>
        <div class="box" id='editFormPayment' style="display: none;">
            <div class="box-header">
                <div class="box-tools">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form) }}
                    <div class="btn-group record_actions">
                        <button class="btn btn-link btn-sm" type="submit"> {{ 'Delete'|trans({}, 'Payment') }}</button>
                        <a class="btn btn-link  btn-sm" onclick="showEdit(false)">
                            {{ 'Cancel'|trans({}, 'Account') }}
                        </a>
                    </div>
                    <input name="modal" type="hidden" value="0">
                    {{ form_end(delete_form) }}
                </div>
            </div>
            <div class="box-body">

                {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <p>
                    <button class="btn-default btn" type="submit">{{ 'save'|trans | capitalize }}</button>
                </p>
                {{ form_end(edit_form) }}
            </div>
            <div class="box-footer">
            </div>
        </div>
    </section>

    <div class="btn-group record_actions"></div>

    <div id="delete_confirm" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>{{ 'Confirm delete'|trans({}, 'Payment') }}</h3>
                </div>
                <div class="modal-body">
                    <p>{{ 'You are about to delete an item'|trans({}, 'Payment') }}
                        , {{ 'this procedure is irreversible'|trans({}, 'Payment') }}.</p>
                    <p>{{ 'Do you want to proceed?'|trans({}, 'Payment') }}</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger">{{ 'Yes'|trans({}, 'Payment') }}</button>
                    <button class="btn btn-default" data-dismiss="modal">{{ 'No'|trans({}, 'Payment') }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}

    {{ parent() }}
    <script type="text/javascript">
        function showEdit(show) {
            if (show) {
                $('#showPayment').hide();
                $('#editFormPayment').show();
            } else {
                $('#showPayment').show();
                $('#editFormPayment').hide();
            }
        }

    </script>
{% endblock %}