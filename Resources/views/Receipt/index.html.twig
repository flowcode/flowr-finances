{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% list'|trans({'%entity%': 'Document'}, 'Document') }} - {{ parent() }}{% endblock %}
{% macro thead(name, field, label) %}
    {% spaceless %}
        {% set sort = app.session.get('sort.' ~ name) %}
        {% if sort and sort.field == field %}
            {% if sort.type == 'DESC' %}
                <a href="{{ path('finance_document_sort', {field: field, type: 'ASC'}) }}">{{ label | trans({},'Finance') }}
                    <i class="fa fa-sort-down"></i></a>
            {% elseif sort.type == 'ASC' %}
                <a href="{{ path('finance_document_sort', {field: field, type: 'DESC'}) }}">{{ label | trans({},'Finance') }}
                    <i class="fa fa-sort-up"></i></a>
            {% endif %}
        {% else %}
            <a href="{{ path('finance_document_sort', {field: field, type: 'ASC'}) }}">{{ label | trans({},'Finance') }}
                <i class="fa fa-sort"></i></a>
        {% endif %}
    {% endspaceless %}
{% endmacro %}

{% from _self import thead %}

{% block app_menu %}
    {{ include("FlowerFinancesBundle::appnav.html.twig", { 'app_document': true }) }}
{% endblock %}


{% block body %}
    <section class="content-header">
        <h1>
            {{ 'receipts'|trans({}, 'Finance')|capitalize }}
        </h1>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header">
                <div class="box-tools pull-right">
                    <a class="btn btn-link btn-sm" href={{ path('finance_document_si_new') }}>
                        <i class="fa fa-plus"></i>
                        {{ 'Create a new %entity%'|trans({'%entity%': 'CustomerInvoice'}, 'Finance') }}
                    </a>
                </div>
            </div>
            <div class="box-body">
                <table class="table table-hover records_list table-condensed">
                    <thead>
                    <tr>
                        <th scope="col">{{ thead('document', 'id', 'Id') }}</th>
                        <th scope="col">{{ thead('document', 'status', 'Status') }}</th>
                        <th scope="col">{{ thead('document', 'supplier', 'Supplier') }}</th>
                        <th scope="col">{{ thead('document', 'total', 'Total') }}</th>
                        <th scope="col">{{ thead('document', 'date', 'Date') }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for document in paginator %}
                        <tr>
                            <td>
                                <a href="{{ path('finance_document_rc_show', {id: document.id}) }}">{{ document.id }}</a>
                            </td>
                            <td>
                                {{ include('FlowerFinancesBundle:Document:invoice_status_text.html.twig', {'status':document.status}) }}
                            </td>
                            <td>{{ document.supplier }}</td>
                            <td>{{ document.total }}</td>
                            <td>{{ document.created|date('Y-m-d') }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                {{ knp_pagination_render(paginator) }}
            </div>
            <div class="box-footer">

            </div>

    </section>

{% endblock %}
