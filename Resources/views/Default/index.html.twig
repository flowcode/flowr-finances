{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ 'finances'|trans|title }} - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerFinancesBundle::appnav.html.twig") }}
{% endblock %}

{% block body %}

    <section class="content-header">
        <h1>
            {{ 'finances'|trans({}, 'Finance')|title }}
        </h1>
    </section>
    <section class="content">

        <div class="row">
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-green">
                        <i class="fa fa-chevron-up"></i>
                    </span>
                    <div class="info-box-content">
                        <span class="info-box-text">{{ 'assets' }}</span>
                        <span class="info-box-number">{{ assets.debit }}</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-green">
                        <i class="fa fa-chevron-down"></i>
                    </span>

                    <div class="info-box-content">
                        <span class="info-box-text">{{ 'liability' }}</span>
                        <span class="info-box-number">{{ liability.credit }}</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-green">
                        <i class="fa fa-chevron-up"></i>
                    </span>

                    <div class="info-box-content">
                        <span class="info-box-text">{{ 'income' }}</span>
                        <span class="info-box-number">{{ income.credit }}</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-green">
                        <i class="fa fa-chevron-down"></i>
                    </span>

                    <div class="info-box-content">
                        <span class="info-box-text">{{ 'expense' }}</span>
                        <span class="info-box-number">{{ expense.debit }}</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
        </div>

    </section>

{% endblock %}