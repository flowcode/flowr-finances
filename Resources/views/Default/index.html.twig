{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ 'finances'|trans|title }} - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerFinancesBundle::appnav.html.twig") }}
{% endblock %}

{% block body %}

    <section class="content-header">
        <h1>
            {{ 'quick stats'|trans({}, 'Finance')|title }}

        </h1>
    </section>
    <section class="content">

        <div class="row">
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
                            Current month
                        </h3>
                    </div>
                    <div class="box-body">
                        <table class="table">
                            <tr>
                                <th>{{ 'incomes'|trans({}, 'Finance')|title }}</th>
                                <td>{{ income.credit }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'expenses'|trans({}, 'Finance')|title }}</th>
                                <td>{{ expense.debit }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'balance'|trans({}, 'Finance')|title }}</th>
                                <td></td>
                            </tr>

                        </table>

                    </div>
                </div>

            </div>
        </div>

    </section>

{% endblock %}